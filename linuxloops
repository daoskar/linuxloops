cat >/usr/bin/gamescope-wayland-teardown-workaround <<'GAMESCOPETEARDOWN'
#!/bin/bash

set -eu

TARGETS=('/bin/bash /usr/bin/deck-session'
         '/usr/bin/kwin_x11')

for target in "\${TARGETS[@]}"; do
  for processtree in \$(pgrep -xf "\$target" || true); do
    kill -- "-\$processtree"
  done
done
GAMESCOPETEARDOWN
