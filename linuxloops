usermod -aG sudo '${username}'
INSTALL_USER
chmod 0755 "${linuxloopsdir}"/chroot/bootstrap/linuxloops/install_user

surface_remove="linux-generic-* linux-headers-* linux-image-* linux-modules-*"
initramfs_type="initramfstools"
